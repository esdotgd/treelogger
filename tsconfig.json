{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "downlevelIteration": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": false,

        "module": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,

        "composite": true,

        "declaration": true,
        "lib": ["ES2022"]
    },
    "include": ["src"]
}
